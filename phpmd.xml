<?xml version="1.0"?>
<ruleset name="OMS WordPress-Compatible Ruleset"
         xmlns="http://pmd.sf.net/ruleset/1.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0
                     http://pmd.sf.net/ruleset_xml_schema.xsd"
         xsi:noNamespaceSchemaLocation="
                     http://pmd.sf.net/ruleset_xml_schema.xsd">
    <description>OMS PHPMD Ruleset - WordPress Compatible (snake_case naming)</description>
    <exclude-pattern>vendor/</exclude-pattern>
    <exclude-pattern>tests/</exclude-pattern>
    <exclude-pattern>wordpress/</exclude-pattern>
    <exclude-pattern>src/</exclude-pattern>
    <!-- Code Size Rules - Adjusted for WordPress plugin patterns -->
    <rule ref="rulesets/codesize.xml">
        <exclude name="ExcessiveClassComplexity"/>
        <exclude name="ExcessiveClassLength"/>
        <exclude name="ExcessiveMethodLength"/>
        <exclude name="ExcessiveParameterList"/>
        <exclude name="ExcessivePublicCount"/>
        <exclude name="TooManyFields"/>
        <exclude name="TooManyMethods"/>
        <exclude name="TooManyPublicMethods"/>
        <exclude name="CyclomaticComplexity"/>
        <exclude name="NPathComplexity"/>
    </rule>
    <!-- Code Size - Adjust thresholds for security scanner complexity -->
    <rule ref="rulesets/codesize.xml/CyclomaticComplexity">
        <properties>
            <property name="reportLevel" value="15"/>
        </properties>
    </rule>
    <rule ref="rulesets/codesize.xml/NPathComplexity">
        <properties>
            <property name="reportLevel" value="500"/>
        </properties>
    </rule>
    <!-- Naming Rules - Exclude camelCase rules (WordPress uses snake_case) -->
    <rule ref="rulesets/naming.xml">
        <exclude name="CamelCaseClassName"/>
        <exclude name="CamelCasePropertyName"/>
        <exclude name="CamelCaseParameterName"/>
        <exclude name="CamelCaseVariableName"/>
        <exclude name="CamelCaseMethodName"/>
        <exclude name="ShortVariable"/>
        <exclude name="LongVariable"/>
    </rule>
    <!-- Unused Code Rules -->
    <rule ref="rulesets/unusedcode.xml">
        <exclude name="UnusedPrivateField"/>
        <exclude name="UnusedLocalVariable"/>
        <exclude name="UnusedFormalParameter"/>
    </rule>
    <!-- Design Rules - Keep for important design issues -->
    <rule ref="rulesets/design.xml">
        <exclude name="TooManyPublicMethods"/>
        <exclude name="CouplingBetweenObjects"/>
    </rule>
    <!-- Controversial Rules - Exclude ExitExpression (WordPress uses wp_die) -->
    <rule ref="rulesets/controversial.xml">
        <exclude name="ExitExpression"/>
        <exclude name="CamelCaseClassName"/>
        <exclude name="CamelCasePropertyName"/>
        <exclude name="CamelCaseMethodName"/>
        <exclude name="CamelCaseParameterName"/>
        <exclude name="CamelCaseVariableName"/>
        <exclude name="Superglobals"/>
    </rule>
    <!-- Code Size - Adjust thresholds for security scanner complexity -->
    <rule ref="rulesets/codesize.xml/CyclomaticComplexity">
        <properties>
            <property name="reportLevel" value="15"/>
        </properties>
    </rule>
    <rule ref="rulesets/codesize.xml/NPathComplexity">
        <properties>
            <property name="reportLevel" value="500"/>
        </properties>
    </rule>
</ruleset>
