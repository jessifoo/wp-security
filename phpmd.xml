<?xml version="1.0"?>
<ruleset name="OMS WordPress Security Plugin Ruleset"
         xmlns="http://pmd.sf.net/ruleset/1.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0
                     http://pmd.sf.net/ruleset_xml_schema.xsd"
         xsi:noNamespaceSchemaLocation="
                     http://pmd.sf.net/ruleset_xml_schema.xsd">
    <description>
        PHPMD Ruleset for WordPress Security Plugin Development.
        Security scanning code requires higher complexity thresholds due to:
        - Multiple pattern matching branches
        - Edge case handling for malware detection
        - Fallback strategies for quarantine operations
    </description>

    <exclude-pattern>vendor/</exclude-pattern>
    <exclude-pattern>tests/</exclude-pattern>
    <exclude-pattern>wordpress/</exclude-pattern>
    <exclude-pattern>src/</exclude-pattern>

    <!-- Code Size Rules - Adjusted for security plugin patterns -->
    <rule ref="rulesets/codesize.xml">
        <!-- Exclude rules that don't apply well to security scanning code -->
        <exclude name="ExcessiveClassComplexity"/>
        <exclude name="ExcessiveClassLength"/>
        <exclude name="ExcessiveMethodLength"/>
        <exclude name="ExcessiveParameterList"/>
        <exclude name="ExcessivePublicCount"/>
        <exclude name="TooManyFields"/>
        <exclude name="TooManyMethods"/>
        <exclude name="TooManyPublicMethods"/>
        <!-- Exclude complexity rules - we'll add them back with higher thresholds -->
        <exclude name="CyclomaticComplexity"/>
        <exclude name="NPathComplexity"/>
    </rule>

    <!-- Cyclomatic Complexity - Higher threshold for security code -->
    <rule ref="rulesets/codesize.xml/CyclomaticComplexity">
        <properties>
            <!-- Security scanning methods need ~25 for pattern matching -->
            <property name="reportLevel" value="25"/>
        </properties>
    </rule>

    <!-- NPath Complexity - Exclude for security code (too many valid paths) -->
    <!-- Security scanners legitimately have high NPath due to pattern matching -->
    <!-- Keeping this excluded as NPath penalizes necessary security logic -->

    <!-- Naming Rules - WordPress uses snake_case -->
    <rule ref="rulesets/naming.xml">
        <exclude name="CamelCaseClassName"/>
        <exclude name="CamelCasePropertyName"/>
        <exclude name="CamelCaseParameterName"/>
        <exclude name="CamelCaseVariableName"/>
        <exclude name="CamelCaseMethodName"/>
        <exclude name="ShortVariable"/>
        <exclude name="LongVariable"/>
    </rule>

    <!-- Unused Code Rules -->
    <rule ref="rulesets/unusedcode.xml">
        <exclude name="UnusedPrivateField"/>
        <exclude name="UnusedLocalVariable"/>
        <exclude name="UnusedFormalParameter"/>
    </rule>

    <!-- Design Rules -->
    <rule ref="rulesets/design.xml">
        <exclude name="TooManyPublicMethods"/>
        <exclude name="CouplingBetweenObjects"/>
    </rule>

    <!-- Controversial Rules - WordPress patterns -->
    <rule ref="rulesets/controversial.xml">
        <!-- WordPress uses exit after redirects -->
        <exclude name="ExitExpression"/>
        <!-- WordPress uses snake_case -->
        <exclude name="CamelCaseClassName"/>
        <exclude name="CamelCasePropertyName"/>
        <exclude name="CamelCaseMethodName"/>
        <exclude name="CamelCaseParameterName"/>
        <exclude name="CamelCaseVariableName"/>
        <!-- WordPress uses superglobals in some contexts -->
        <exclude name="Superglobals"/>
    </rule>
</ruleset>
