{
    "name": "codeium/windsurf-project",
    "description": "WordPress security plugin for malware detection and prevention",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "require": {
        "php": ">=8.4",
        "ext-json": "*",
        "ext-pcre": "*",
        "ext-mbstring": "*",
        "micropackage/requirements": "^1.2"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^1.2",
        "ergebnis/composer-normalize": "^2.6",
        "php-parallel-lint/php-parallel-lint": "^1.4",
        "php-stubs/wordpress-stubs": "^6.2",
        "php-stubs/wordpress-tests-stubs": "^6.2",
        "php-stubs/wp-cli-stubs": "^2.0",
        "phpmd/phpmd": "^2.15",
        "phpro/grumphp": "^2.18",
        "phpunit/phpunit": "^9.2",
        "szepeviktor/phpstan-wordpress": "^2.0",
        "vimeo/psalm": "^6.5",
        "wp-coding-standards/wpcs": "^3.0"
    },
    "autoload": {
        "classmap": [
            "includes/",
            "admin/"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "ergebnis/composer-normalize": true,
            "phpro/grumphp": true
        },
        "platform": {
            "php": "8.4.0"
        },
        "platform-check": false,
        "optimize-autoloader": true,
        "sort-packages": true,
        "preferred-install": {
            "*": "dist"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite default",
        "test:coverage": "phpunit --coverage-html coverage",
        "test:all": [
            "@test"
        ],
        "phpcs": "phpcs includes/ admin/ tests/ obfuscated-malware-scanner.php",
        "phpcs:report": "phpcs --standard=WordPress --report=summary",
        "phpcbf": "phpcbf includes/ admin/ tests/ obfuscated-malware-scanner.php",
        "psalm": "php -d error_reporting=24575 vendor/bin/psalm --output-format=compact",
        "psalm:baseline": "psalm --set-baseline=psalm-baseline.xml",
        "phpstan": "phpstan analyse --memory-limit=1G",
        "phpstan:baseline": "phpstan analyse --generate-baseline",
        "phpmd": "phpmd includes/,admin/,obfuscated-malware-scanner.php text phpmd.xml",
        "lint": [
            "@phpcs",
            "@psalm",
            "@phpstan"
        ],
        "lint:fix:phpcs": "@phpcbf",
        "lint:fix": [
            "@lint:fix:phpcs"
        ],
        "check": [
            "@lint",
            "@test:all"
        ],
        "ci:check": [
            "@lint",
            "@test:unit"
        ],
        "post-install-cmd": [
            "@php -r \"echo 'Composer install completed successfully.\\n';\""
        ],
        "post-update-cmd": [
            "@php -r \"echo 'Dependencies updated successfully.\\n';\""
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
